<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<EditText android:id="@+id/searchBox" android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_weight="1" 
			android:imeOptions="actionDone"
			android:lines="1"
			android:scrollHorizontally="true"
			android:ellipsize="end">
		</EditText>

		<!-- Button android:text="@string/Submit" android:id="@+id/submit"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="0">
		</Button>  -->
	</LinearLayout>

	<TextView android:id="@+id/instructions_text"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_horizontal|center_vertical"
	    android:text="@string/instructions">
	</TextView>
	
	<ListView android:id="@+id/data_list" android:layout_width="match_parent" android:layout_height="match_parent">
	</ListView>

</LinearLayout>
